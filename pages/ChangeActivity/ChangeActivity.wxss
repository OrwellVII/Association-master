/* pages/ChangeActivity/ChangeActivity.wxss */
/* 修改活动详情页面 */
.container{
  padding-top: 20rpx;
}

.title{
  color: red;
  margin: 30rpx;
  font-size: 50rpx;
}

.input{
  margin: 10rpx auto;  
  display: flex;  
  align-items: center;    
  padding: 0 40rpx;   
  background-color: #fff;  
  font-size: 34rpx;  
  color: #000;   
}

.input input{
  height: 40rpx;
  width: 450rpx;
  padding: 10rpx;
  background-color: #acd;
  border-radius: 5px;
}

.input picker{
  height: 40rpx;
  width: 450rpx;
  padding: 10rpx;
  background-color: #acd;
  border-radius: 5px;
}

.input .summary{
  width: 450rpx;
  padding: 10rpx;
  background-color: #acd;
  border-radius: 5px;
}

.text{
  margin: 10rpx auto;  
  display: flex;  
  align-items: center;    
  padding: 0 40rpx;   
  background-color: #fff;  
  font-size: 34rpx;  
  color: #000;   
}

.text text{
  width: 450rpx;
  padding: 10rpx;
  background-color: #acd;
  border-radius: 5px;
}

.person{
  width: 630rpx;
  margin: 20rpx auto;      
  background-color: #fff;  
  font-size: 34rpx;  
  color: #000;
}

.person .activity{
  margin: 10rpx auto;
  padding: 10rpx;
  background-color: #acd;
  border-radius: 5px;

}

.person .look{
  color: #acd;
}

.person .activity .name{
  margin-left: 20rpx;
}

.person .activity .campus{
  font-size: 25rpx;
  position: relative;
  float: right;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.buttons{
  margin: 10rpx auto;   
}

.buttons button{
  width: 500rpx;
  text-align: center;
  margin: 50rpx;
  font-size: 34rpx;
}

